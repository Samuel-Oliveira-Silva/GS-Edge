#include <WiFi.h>
#include <PubSubClient.h>
#include "DHT.h"

// ---------------- PINOS ----------------
#define DHTPIN 4
#define DHTTYPE DHT22
#define LEDPIN 2
#define BUTTON_PIN 33  // bot√£o de postura

// ---------------- REDE E MQTT ----------------
const char* ssid = "Wokwi-GUEST";
const char* password = "";
const char* mqtt_server = "test.mosquitto.org";

WiFiClient espClient;
PubSubClient client(espClient);
DHT dht(DHTPIN, DHTTYPE);

unsigned long lastMsg = 0;
float temp = 0.0;
float hum = 0.0;
int contadorPomodoro = 0;
bool chairOccupied = false;

// ---------------- CONEX√ÉO WI-FI ----------------
void setup_wifi() {
  delay(10);
  Serial.println("Conectando ao WiFi...");
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nWiFi conectado!");
  Serial.print("IP: ");
  Serial.println(WiFi.localIP());
}

// ---------------- CONEX√ÉO MQTT ----------------
void reconnect() {
  while (!client.connected()) {
    Serial.print("Conectando ao MQTT...");
    if (client.connect("esp32-office-monitor")) {
      Serial.println("Conectado!");
      client.subscribe("office/led");
    } else {
      Serial.print("Falha, rc=");
      Serial.print(client.state());
      Serial.println(" tentando de novo em 5s");
      delay(5000);
    }
  }
}

void callback(char* topic, byte* message, unsigned int length) {
  Serial.print("Mensagem recebida em [");
  Serial.print(topic);
  Serial.print("]: ");
  String msg;
  for (int i = 0; i < length; i++) msg += (char)message[i];
  Serial.println(msg);

  if (msg == "1") digitalWrite(LEDPIN, HIGH);
  else digitalWrite(LEDPIN, LOW);
}

// ---------------- CONFIGURA√á√ÉO INICIAL ----------------
void setup() {
  Serial.begin(115200);
  pinMode(LEDPIN, OUTPUT);
  pinMode(BUTTON_PIN, INPUT_PULLUP); // bot√£o com pull-up interno
  dht.begin();

  setup_wifi();
  client.setServer(mqtt_server, 1883);
  client.setCallback(callback);
}

// ---------------- LOOP PRINCIPAL ----------------
void loop() {
  if (!client.connected()) reconnect();
  client.loop();

  unsigned long now = millis();
  if (now - lastMsg > 5000) {  // a cada 5 segundos
    lastMsg = now;

    // L√™ sensores
    temp = dht.readTemperature();
    hum = dht.readHumidity();
    bool chair = (digitalRead(BUTTON_PIN) == LOW); // LOW = pressionado = cadeira ocupada
    if (isnan(temp) || isnan(hum)) return;

    // L√≥gica b√°sica
    if (chair) {
      contadorPomodoro++;
      chairOccupied = true;
      if (contadorPomodoro % 6 == 0) { // a cada 30s simulados (6x5s)
        client.publish("office/alerta", "Hora de levantar e beber √°gua!");
        Serial.println("üö® Alerta: Levante-se e beba √°gua!");
      }
    } else {
      chairOccupied = false;
      contadorPomodoro = 0;
    }

    // LED indica status (ocupado ou n√£o)
    digitalWrite(LEDPIN, chairOccupied ? HIGH : LOW);

    // Publica dados no MQTT
    String payload = "{\"temperatura\": " + String(temp) + 
                     ", \"umidade\": " + String(hum) + 
                     ", \"cadeira\": " + String(chairOccupied ? "1" : "0") + 
                     ", \"contador\": " + String(contadorPomodoro) + "}";
    client.publish("office/dados", payload.c_str());

    Serial.println("Publicado: " + payload);
  }
}
